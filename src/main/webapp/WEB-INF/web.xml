<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
	<display-name>Archetype Created Web Application</display-name>
	
	<filter>
		<filter-name>EncodingFilter</filter-name>
		<filter-class>by.htp.travelserviceWEB.filter.EncodingFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>/Controller</url-pattern>
	</filter-mapping>
	
	<filter>
		<filter-name>SecurityCommandFilter</filter-name>
		<filter-class>by.htp.travelserviceWEB.filter.SecurityCommandFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>SecurityCommandFilter</filter-name>
		<url-pattern>/Controller</url-pattern>
	</filter-mapping>
	
	<filter>
		<filter-name>SecurityUserFilter</filter-name>
		<filter-class>by.htp.travelserviceWEB.filter.SecurityUserFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>SecurityUserFilter</filter-name>
		<url-pattern>/Controller</url-pattern>
	</filter-mapping>
	
	<servlet>
		<display-name>Controller</display-name>
		<servlet-name>Controller</servlet-name>
		<servlet-class>by.htp.travelserviceWEB.controller.Controller</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Controller</servlet-name>
		<url-pattern>/Controller</url-pattern>
	</servlet-mapping>

	<resource-ref>
		<description>MySQL DB Connection Pool</description>
		<res-ref-name>jdbc/travelservice</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

</web-app>
